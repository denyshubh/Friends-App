<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/msg_single_cv"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    >



    <RelativeLayout
        android:layout_marginTop="3dp"
        android:id="@+id/message_single_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="15dp">
        <TextView
            android:id="@+id/message_single_layout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="false"
            android:text="TIME"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/text_msg_wrapper"
            android:textColor="@color/black_overlay" />

        <LinearLayout
            android:id="@+id/text_msg_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/message_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textView27"
                android:background="@drawable/bg_msg_you"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:fontFamily="serif-monospace"
                android:paddingTop="8dp"
                android:textColor="@color/youtube_black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/triangle_msg_you"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:visibility="gone" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>